<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    tools:context="hebe.minions.CycleAircon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:id="@+id/FirstStage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Stage:"
            android:padding="10dp"
            android:textSize="25dp"/>



        <LinearLayout
            android:id="@+id/caAircon1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/caBtnAircon1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Aircon "
                android:textSize="20dp" />

            <SeekBar
                android:id="@+id/caSldAircon1"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="14"
                android:progress="3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/catiming1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stg1for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For       "
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/caMin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ems="10"
                android:text="20"
                android:inputType="number" />

            <TextView
                android:id="@+id/stg1min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="minutes."
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </LinearLayout>



        <TextView
            android:id="@+id/secondStage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Second Stage:"
            android:padding="10dp"
            android:textSize="25dp"/>


        <LinearLayout
            android:id="@+id/caAircon2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/caBtnAircon2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Aircon "
                android:textSize="20dp" />

            <SeekBar
                android:id="@+id/caSldAircon2"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="14"
                android:progress="3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/catiming2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stg2for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For       "
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ems="10"
                android:text="20"
                android:id="@+id/caMin2"
                android:inputType="number" />

            <TextView
                android:id="@+id/stg2min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="minutes."
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </LinearLayout>




        <TextView
            android:id="@+id/caRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From there:"
            android:padding="10dp"
            android:textSize="25dp"/>

        <LinearLayout
            android:id="@+id/caRepeatChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stg3for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeat "
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ems="10"
                android:text="5"
                android:id="@+id/caNumTimes"
                android:inputType="number" />

            <TextView
                android:id="@+id/stg3min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="times."
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/caSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Create"
                android:textColor="@color/white" />



            <Button
                android:id="@+id/caCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Cancel"
                android:textColor="@color/white" />
        </LinearLayout>



    </LinearLayout>

    </android.support.constraint.ConstraintLayout>
